<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.AuthPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry
            x:Name="PasswordEntry"
            IsPassword="True"
            Placeholder="暂时不用输入这个，我也不想删就这样了" />
        <Entry x:Name="URLEntry" Placeholder="请输入服务端的地址，以 ws:// 开头" />
        <Entry x:Name="LiveURLEntry" Placeholder="请输入hls流媒体服务器的地址，以 http:// 开头" />
        <!--<HorizontalStackLayout>
            <Label Text="记住用户" />
            <CheckBox x:Name="rememberUsername" />
            <Label Text="记住密码" />
            <CheckBox x:Name="rememberPassword" />
        </HorizontalStackLayout>-->
        <Button Clicked="OnLoginClicked" Text="Login" />
    </StackLayout>
</ContentPage>